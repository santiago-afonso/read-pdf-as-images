#!/usr/bin/env bash
set -euo pipefail

# read-pdf-as-images
# Deprecated entrypoint kept for backward compatibility.
# Delegates to read-pdf --as-images while preserving the existing CLI surface.

SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)

exec "${SCRIPT_DIR}/read-pdf" --as-images "$@"
